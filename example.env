# -----------------------
# Image Variables
# -----------------------
FRAPPE_IMAGE=test                  # The Docker image name for Frappe
FRAPPE_IMAGE_TAG=0.1                # The tag for your image

# -----------------------
# Database Variables
# -----------------------
DB_HOST=db                          # The hostname of your DB container/service
DB_PORT=3306                         # Default MariaDB port
DB_USER=root                          # Database user with privileges to create DBs
DB_PASSWORD=frappe_password          # Password for the above user
DB_NAME=frappe                        # Name of the site DB to be created

# -----------------------
# Admin
# -----------------------
ADMIN_PASSWORD=admin                 # Admin password for the ERPNext site

# -----------------------
# Frontend / Nginx / SocketIO Variables
# -----------------------
BACKEND=127.0.0.1:8000              # Where your backend (Frappe) is listening
FRAPPE_SITE_NAME_HEADER=frontend    # The site name / header that Nginx uses
SOCKETIO=127.0.0.1:9000             # SocketIO URL/port
UPSTREAM_REAL_IP_ADDRESS=127.0.0.1  # The real IP source Nginx trusts
UPSTREAM_REAL_IP_HEADER=X-Forwarded-For
UPSTREAM_REAL_IP_RECURSIVE=off
PROXY_READ_TIMEOUT=120
CLIENT_MAX_BODY_SIZE=50m

# -----------------------
# qb_connector / Node Variables
# -----------------------
PORT=3000                            # Port for your qb_connector server
FRAPPE_API_TOKEN=key:secret             # Set to null or the actual token if available
FRAPPE_SITE_URL="http://localhost:8080"  # URL for the Frappe site
QBO_ENV="sandbox"                    # QBO environment - sandbox or production
TAXED_DISCOUNT_ID=null                   # If you have a taxed discount item, fill here
NON_TAXED_DISCOUNT_ID=null            # ID of non-taxed discount
SALES_TAX_ID=null                        # Sales Tax ID in ERPNext / QBO
SALES_TAX_STATE=null                     # State for sales tax
DISCOUNT_ID=null                         # Discount account / item ID
QBO_DEPOSIT_ACCOUNT_NAME=null     # Deposit account name in QBO
